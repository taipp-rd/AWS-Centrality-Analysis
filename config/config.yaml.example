# ライトニングネットワーク中心性分析設定ファイル
# このファイルを config.yaml にコピーして、実際の値を設定してください

database:
  host:
  port: 
  dbname: 
  user: 
  password:  # 実際のパスワードに置き換えてください
  sslmode: 
  connect_timeout: 

centrality:
  # 媒介中心性 (Betweenness Centrality)
  betweenness:
    normalized: true
    directed: false
    weight: null  # エッジの重み属性名（nullの場合は重みなし）
  
  # 近接中心性 (Closeness Centrality)
  closeness:
    normalized: true
    distance: null  # 距離属性名（nullの場合は重みなし）
    wf_improved: true  # Wasserman and Faust改善版を使用
  
  # 近似中心性 (Eigenvector Centrality)
  eigenvector:
    max_iter: 100
    tol: 1.0e-6
    weight: null  # エッジの重み属性名

aws:
  sagemaker:
    # IAMロール名（SageMaker Notebook Instance作成時に自動生成される）
    # 例: AmazonSageMaker-ExecutionRole-20251217T182202
    role: AmazonSageMaker-ExecutionRole-20251217T182202
    bucket: null  # S3バケット名（例: lightning-network-analysis-<your-account-id>）
    # インスタンスタイプの選択:
    # - 小規模データ（<10,000ノード）: ml.t3.medium（推奨、コスト効率が良い）
    # - 中規模データ（10,000-100,000ノード）: ml.t3.large または ml.m5.large
    # - 大規模データ（>100,000ノード）: ml.m5.xlarge 以上
    # - 計算集約的な前処理: ml.c5.xlarge（計算最適化インスタンス）
    instance_type: ml.c5.xlarge  # または ml.t3.medium
    region: ap-northeast-1
  
  s3:
    bucket: null  # データ保存用S3バケット（例: lightning-network-analysis-17351726356）
    prefix: lightning-network-analysis/

ml:
  # 機械学習モデルの設定
  models:
    - name: routing_prediction
      type: classification  # または regression
      algorithm: xgboost
      hyperparameters:
        max_depth: 6
        learning_rate: 0.1
        n_estimators: 100
  
  # 特徴量エンジニアリング
  features:
    include_node_features: true
    include_edge_features: true
    include_centrality_features: true
    include_temporal_features: false  # 将来の拡張用

analysis:
  # 分析結果の保存先
  output_dir: ./results
  save_plots: true
  plot_format: png
  
  # 可視化設定
  visualization:
    node_size_range: [10, 100]
    color_map: viridis
    layout: spring  # spring, circular, kamada_kawai, etc.

logging:
  level: INFO
  format: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  file: ./logs/analysis.log
