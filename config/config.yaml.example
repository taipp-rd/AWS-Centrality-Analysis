# ライトニングネットワーク中心性分析設定ファイル
# このファイルを config.yaml にコピーして、実際の値を設定してください

database:
  host: lightning-graph-db.c7kw0quwamx3.ap-northeast-1.rds.amazonaws.com
  port: 19688
  dbname: graph
  user: mikura
  password: "#w!zLVhwNzzz4!r"  # 実際のパスワードに置き換えてください
  sslmode: prefer
  connect_timeout: 10

centrality:
  # 媒介中心性 (Betweenness Centrality)
  betweenness:
    normalized: true
    directed: false
    weight: null  # エッジの重み属性名（nullの場合は重みなし）
  
  # 近接中心性 (Closeness Centrality)
  closeness:
    normalized: true
    distance: null  # 距離属性名（nullの場合は重みなし）
    wf_improved: true  # Wasserman and Faust改善版を使用
  
  # 近似中心性 (Eigenvector Centrality)
  eigenvector:
    max_iter: 100
    tol: 1.0e-6
    weight: null  # エッジの重み属性名

aws:
  sagemaker:
    role: null  # IAMロール名（例: SageMakerExecutionRole）
    bucket: null  # S3バケット名（例: lightning-network-analysis）
    instance_type: ml.t3.medium
    region: ap-northeast-1
  
  s3:
    bucket: null  # データ保存用S3バケット
    prefix: lightning-network-analysis/

ml:
  # 機械学習モデルの設定
  models:
    - name: routing_prediction
      type: classification  # または regression
      algorithm: xgboost
      hyperparameters:
        max_depth: 6
        learning_rate: 0.1
        n_estimators: 100
  
  # 特徴量エンジニアリング
  features:
    include_node_features: true
    include_edge_features: true
    include_centrality_features: true
    include_temporal_features: false  # 将来の拡張用

analysis:
  # 分析結果の保存先
  output_dir: ./results
  save_plots: true
  plot_format: png
  
  # 可視化設定
  visualization:
    node_size_range: [10, 100]
    color_map: viridis
    layout: spring  # spring, circular, kamada_kawai, etc.

logging:
  level: INFO
  format: "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  file: ./logs/analysis.log

